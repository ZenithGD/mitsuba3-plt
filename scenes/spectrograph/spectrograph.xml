<scene version="2.1.0">

<!-- Defaults, these can be set via the command line: -Darg=value -->

	<default name="spp" value="4096"/>
	<default name="resx" value="800"/>
	<default name="resy" value="600"/>

<!-- Camera and Rendering Parameters -->

	<integrator type="path" id="elm__0" name="elm__0">
		<integer name="max_depth" value="12"/>
	</integrator>
	<sensor type="perspective" id="elm__1" name="elm__1">
		<string name="fov_axis" value="x"/>
		<float name="fov" value="39.597755"/>
		<float name="principal_point_offset_x" value="0.000000"/>
		<float name="principal_point_offset_y" value="-0.000000"/>
		<float name="near_clip" value="0.100000"/>
		<float name="far_clip" value="100.000000"/>
		<transform name="to_world">
			<rotate x="1" angle="-141.59437040035155"/>
			<rotate y="1" angle="12.134001815256902"/>
			<rotate z="1" angle="179.6860758543242"/>
			<translate value="1.236534 2.807542 -0.015886"/>
		</transform>
		<sampler type="independent" name="sampler">
			<integer name="sample_count" value="$spp"/>
		</sampler>
		<film type="hdrfilm" name="film">
			<integer name="width" value="$resx"/>
			<integer name="height" value="$resy"/>
		</film>
	</sensor>

<!-- Materials -->

	<bsdf type="twosided" id="mat-glossy-mat" name="mat-glossy-mat">
		<bsdf type="roughconductor" name="bsdf">
			<float name="alpha" value="0.007160"/>
			<string name="distribution" value="ggx"/>
			<rgb value="0.800149 0.512448 0.052819" name="specular_reflectance"/>
		</bsdf>
	</bsdf>
	<bsdf type="twosided" id="mat-grating" name="mat-grating">
		<bsdf type="roughgrating" name="bsdf">
			<!-- <string name="material" value="Au" /> -->
			<string name="lobe_type" value="sinusoidal" />
			<float name="height" value="0.04" />
			<float name="inv_period" value="0.7" />
			<boolean name="radial" value="false" />
			<integer name="lobes" value="7" />
			<float name="grating_angle" value="0.5" />
			<float name="multiplier" value="15" />
			<float name="alpha" value="0.04"/>
		</bsdf>
	</bsdf>
	<bsdf type="twosided" id="default-bsdf" name="default-bsdf">
		<bsdf type="diffuse" name="bsdf"/>
	</bsdf>
	<bsdf type="twosided" id="mat-Material.001" name="mat-Material.001">
		<bsdf type="diffuse" name="bsdf">
			<rgb value="0.000000 0.000000 0.000000" name="reflectance"/>
		</bsdf>
	</bsdf>
	<bsdf type="twosided" id="mat-Material.002" name="mat-Material.002">
		<bsdf type="diffuse" name="bsdf">
			<rgb value="0.000000 0.000000 0.000000" name="reflectance"/>
		</bsdf>
	</bsdf>

<!-- Emitters -->

	<emitter type="directional" id="elm__12" name="elm__12">
		<rgb value="10.000000 10.000000 10.000000" name="irradiance"/>
		<transform name="to_world">
			<matrix value="1.000000 0.000000 0.000000 0.000000 0.000000 1.000000 0.000000 0.000000 0.000000 -0.000000 1.000000 -10.000000 0.000000 0.000000 0.000000 1.000000"/>
		</transform>
	</emitter>

<!-- Shapes -->

	<shape type="ply" id="elm__3" name="elm__3">
		<string name="filename" value="meshes/Plane.ply"/>
		<boolean name="face_normals" value="true"/>
		<ref id="mat-glossy-mat" name="bsdf"/>
	</shape>
	<shape type="ply" id="elm__5" name="elm__5">
		<string name="filename" value="meshes/Plane_001.ply"/>
		<boolean name="face_normals" value="true"/>
		<ref id="mat-grating" name="bsdf"/>
	</shape>
	<shape type="ply" id="elm__7" name="elm__7">
		<string name="filename" value="meshes/Plane_002.ply"/>
		<boolean name="face_normals" value="true"/>
		<ref id="default-bsdf" name="bsdf"/>
	</shape>
	<shape type="ply" id="elm__9" name="elm__9">
		<string name="filename" value="meshes/Plane_003.ply"/>
		<boolean name="face_normals" value="true"/>
		<ref id="mat-Material.001" name="bsdf"/>
	</shape>
	<shape type="ply" id="elm__11" name="elm__11">
		<string name="filename" value="meshes/Plane_004.ply"/>
		<boolean name="face_normals" value="true"/>
		<ref id="mat-Material.002" name="bsdf"/>
	</shape>

<!-- Volumes -->

</scene>
